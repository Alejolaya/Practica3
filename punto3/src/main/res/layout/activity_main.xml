<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/azure">
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView android:text="Ingresar notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40dp"
        android:padding="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quices:"
        android:textColor="@color/black"
        android:textSize="30dp"/>
         <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="15%"
        android:id="@+id/etQuices"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exposiciones:"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="10%"
        android:id="@+id/etExpo"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Practicas laboratorio:"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="40%"
        android:id="@+id/etLab"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proyecto Final:"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="35%"
        android:id="@+id/etProFinal"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="30dp"
        android:id="@+id/bCalcular"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Aqui aparecera el resultado"
        android:textSize="30dp"
        android:id="@+id/tvResultado"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        />
</LinearLayout>
</ScrollView>